<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		
		<referenceContainer name="header-wrapper" htmlClass="header_top">
			<container name="header-top-container" label="Header Top Container" as="header-top-container" htmlTag="div" htmlClass="container">
				<container name="header_top_wrapper" label="Header Top Wrapper" as="header_top_wrapper" htmlTag="div" htmlClass="header_top_wrapper">
					<container name="header_cart" label="Header Cart" as="header_cart" after="top.search" htmlTag="div" htmlClass="header_cart">
						<container name="header_cart_wrapper" label="Header Cart Wrapper" as="header_cart_wrapper" htmlTag="div" htmlClass="header_cart_wrapper" />
					</container>
				</container>
			</container>
		</referenceContainer>
		
		<referenceContainer name="footer-container">
			<block class="Magento\Framework\View\Element\Template" name="footer-menu-links" template="Magento_Theme::html/footer.phtml"/>
		</referenceContainer>
		
		<move element="logo" destination="header_top_wrapper" as="logo" before="-"/>
		<move element="top.search" destination="header_top_wrapper" as="topSearch" after="logo" />
		
		<move element="store_language" destination="header_cart_wrapper" as="store_language" />
		<move element="minicart" destination="header_cart_wrapper" as="minicart" after="store_language" />
		
		<move element="catalog.topnav" destination="header.container" as="catalog.topnav" after="header-wrapper"/>
		<move element="form.subscribe" destination="page.bottom.container" as="subscribe" after=""/>
		<move element="copyright" destination="footer-container" as="copyright" after="footer-menu"/>
		
		<referenceContainer name="header.panel.wrapper" remove="true" />
		<referenceBlock name="compare-link-wrapper" remove="true" />
		<referenceBlock name="page.top" remove="true" />
		<referenceContainer name="footer" remove="true" />	
		
	</body>
</page>