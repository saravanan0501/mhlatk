<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
		<attribute name="class" value="product_ecomm"/>
		<referenceBlock name="breadcrumbs" remove="true" />
		<referenceBlock name="product.info.sku" remove="true" />
		<referenceBlock name="product.info.review" remove="true" />
		<referenceBlock name="product.info.social" remove="true" />
		
		<referenceContainer name="content" htmlTag="section">
			<container name="content.container" htmlTag="div" htmlClass="container">
				<container name="inner_content" htmlTag="div" htmlClass="inner_content">
					<container name="product_details_wrapper" htmlTag="div" htmlClass="product_details_wrapper">
						<container name="ecomm_product_selected" htmlTag="div" htmlClass="ecomm_product selected"/>
					</container>
				</container>
			</container>
		</referenceContainer>
		
		<referenceContainer name="product.info.media" htmlTag="div" htmlClass="item_contents_left"/>
		<referenceContainer name="product.info.main" htmlTag="div" htmlClass="item_contents_right">
			<block class="Magento\Catalog\Pricing\Render" name="product.price.wrapper" before="product.info">
				<action method="setTemplate">
					<argument name="template" xsi:type="string">Magento_Catalog::product/view/final_price.phtml</argument>
				</action>
				<block class="Magento\Catalog\Pricing\Render" name="product.price.final">
					<arguments>
						<argument name="price_render" xsi:type="string">product.price.render.default</argument>
						<argument name="price_type_code" xsi:type="string">final_price</argument>
						<argument name="zone" xsi:type="string">item_view</argument>
					</arguments>
				</block>
			</block>
		</referenceContainer>
		
		<move element="product.info.media" destination="ecomm_product_selected" before="-"/>
		<move element="product.info.main" destination="ecomm_product_selected" before="ecomm_product_selected"  after="product.info.media"/>		
		<move element="product.info.details" destination="product_details_wrapper"/>
		<move element="product.info.stock.sku" destination="product.info.main" before="product.info.price"/>
		<move element="catalog.product.related" destination="product_details_wrapper" after="product.info.details"/>
	</body>
</page>
